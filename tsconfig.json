{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015"
		],
		"moduleResolution": "node",
		"module": "es2015",
		"target": "es2015",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitThis": true,
		"sourceMap": true,
		"sourceRoot": "../src",
		"outDir": "./dist"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
